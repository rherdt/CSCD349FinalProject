<Window x:Class="CSCD349FinalProject.GameOver"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CSCD349FinalProject"
        mc:Ignorable="d"
        Title="GameOver" Height="300" Width="300">
    <Grid Background="Black">
        <Label x:Name="GameOver" Content="Game Over..." Foreground="Red" FontFamily="Impact" FontSize="50" HorizontalContentAlignment="Center" HorizontalAlignment="Left" Margin="10,50,0,0" VerticalAlignment="Top" Height="65" Width="272"/>
        <Button x:Name="TryAgainButton" Content="Try Again?" HorizontalAlignment="Left" Margin="40,176,0,0" VerticalAlignment="Top" Width="75" Click="TryAgain_Click"/>
        <Button x:Name="QuitGame" Content="Quit" HorizontalAlignment="Left" Margin="180,176,0,0" VerticalAlignment="Top" Click="QuitGame_Click"  Width="75"/>

    </Grid>
</Window>
